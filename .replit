modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "gitFull", "libxcrypt", "playwright-driver", "chromium", "nss", "nspr", "atk", "cups", "libdrm", "gtk3", "pango", "alsa-lib", "libxkbcommon", "mesa", "xorg.libX11", "xorg.libXrandr", "xorg.libxcb", "xorg.libXcomposite", "dbus", "expat", "at-spi2-atk", "at-spi2-core"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45005
externalPort = 3000

[[ports]]
localPort = 46115
externalPort = 3001
